<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All portfolios
    </h1>

    <a href="/portfolios/new" class="btn btn-block btn-outline-secondary">
      Add a new portfolio
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "portfolio_templates/portfolios_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Stock name
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @portfolios.each do |portfolio| %>
      <tr>
        <td>
          <%= portfolio.id %>
        </td>

        <td>
          <%= portfolio.stock_name %>
        </td>

        <td>
          <% if portfolio.user.present? %>
            <a href="/users/<%= portfolio.user.id %>">
              <%= portfolio.user.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(portfolio.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(portfolio.updated_at) %> ago
        </td>

        <td>
          <a href="/portfolios/<%= portfolio.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @portfolios, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
