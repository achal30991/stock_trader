<!-- Validation failure messages -->
<% if @portfolio.present? %>
  <% if @portfolio.errors.any? %>
    <% @portfolio.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new portfolio
</h1>


<hr>

<!-- Form portfolio start -->
<form action="/create_portfolio" method="post">
<!-- Form portfolio end -->

  <!-- Label and input for stock_name start -->
  <div class="form-group">
    <label for="stock_name">
      Stock name
    </label>

    <!-- Input for stock_name start -->
    <input type="text" id="stock_name" name="stock_name" class="form-control" value="<%= @portfolio.stock_name %>">
    <!-- Input for stock_name end -->
  </div>
  <!-- Label and input for stock_name end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @portfolio.user_id %>">
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create portfolio
  </button>
</form>

<hr>

<a href="/portfolios">
  Go back
</a>
