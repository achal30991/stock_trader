<!-- Validation failure messages -->
<% if @upvote.present? %>
  <% if @upvote.errors.any? %>
    <% @upvote.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new upvote
</h1>


<hr>

<!-- Form upvote start -->
<form action="/create_upvote" method="post">
<!-- Form upvote end -->

  <!-- Label and input for stock_id start -->
  <div class="form-group">
    <label for="stock_id">
      Stock
    </label>

    <!-- Input for stock_id start -->
    <input type="text" id="stock_id" name="stock_id" class="form-control" value="<%= @upvote.stock_id %>">
    <!-- Input for stock_id end -->
  </div>
  <!-- Label and input for stock_id end -->

  <!-- Label and input for expert_id start -->
  <div class="form-group">
    <label for="expert_id">
      Expert
    </label>

    <!-- Input for expert_id start -->
    <input type="text" id="expert_id" name="expert_id" class="form-control" value="<%= @upvote.expert_id %>">
    <!-- Input for expert_id end -->
  </div>
  <!-- Label and input for expert_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create upvote
  </button>
</form>

<hr>

<a href="/upvotes">
  Go back
</a>
