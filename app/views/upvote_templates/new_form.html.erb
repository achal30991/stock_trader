<h1>
  Add a new upvote
</h1>


<hr>

<form action="/create_upvote" method="post">

  <div class="form-group">
    <label for="stock_id">
      Stock
    </label>

    <%= select_tag(:stock_id, options_from_collection_for_select(Stock.all, :id, :portfolio_id, @upvote.stock_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="expert_id">
      Expert
    </label>

    <%= select_tag(:expert_id, options_from_collection_for_select(Expert.all, :id, :email, @upvote.expert_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create upvote
  </button>
</form>

<hr>

<a href="/upvotes">
  Go back
</a>
