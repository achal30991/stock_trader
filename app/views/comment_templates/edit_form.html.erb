<h1>
  Edit comment #<%= @comment.id %>
</h1>

<hr>

<!-- Form comment start -->
<form action="/update_comment/<%= @comment.id %>" method="post">
<!-- Form comment end -->

  <!-- Label and input for commenter_id start -->
  <div class="form-group">
    <label for="commenter_id">
      Commenter
    </label>

    <!-- Input for commenter_id start -->
    <input type="text" id="commenter_id" name="commenter_id" class="form-control" value="<%= @comment.commenter_id %>">
    <!-- Input for commenter_id end -->
  </div>
  <!-- Label and input for commenter_id end -->

  <!-- Label and input for portfolio_id start -->
  <div class="form-group">
    <label for="portfolio_id">
      Portfolio
    </label>

    <!-- Input for portfolio_id start -->
    <input type="text" id="portfolio_id" name="portfolio_id" class="form-control" value="<%= @comment.portfolio_id %>">
    <!-- Input for portfolio_id end -->
  </div>
  <!-- Label and input for portfolio_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update comment
  </button>
</form>

<hr>

<a href="/comments">
  Go back
</a>
