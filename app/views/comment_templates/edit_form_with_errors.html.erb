<!-- Validation failure messages -->
<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit comment #<%= @comment.id %>
</h1>

<hr>

<!-- Form comment start -->
<form action="/update_comment/<%= @comment.id %>" method="post">
<!-- Form comment end -->

  <!-- Label and input for commenter_id start -->
  <div class="form-group">
    <label for="commenter_id">
      Commenter
    </label>

    <!-- Input for commenter_id start -->
    <%= select_tag(:commenter_id, options_from_collection_for_select(Expert.all, :id, :email, @comment.commenter_id), :class => "form-control") %>
    <!-- Input for commenter_id end -->
  </div>
  <!-- Label and input for commenter_id end -->

  <!-- Label and input for portfolio_id start -->
  <div class="form-group">
    <label for="portfolio_id">
      Portfolio
    </label>

    <!-- Input for portfolio_id start -->
    <%= select_tag(:portfolio_id, options_from_collection_for_select(Portfolio.all, :id, :created_at, @comment.portfolio_id), :class => "form-control") %>
    <!-- Input for portfolio_id end -->
  </div>
  <!-- Label and input for portfolio_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update comment
  </button>
</form>

<hr>

<a href="/comments">
  Go back
</a>
