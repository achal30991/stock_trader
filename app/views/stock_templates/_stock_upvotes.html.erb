<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Upvotes

    <a data-toggle="collapse" href="#stock_upvotes_new_form">
      Add upvote
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @stock.upvotes.each do |upvote| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/upvotes/<%= upvote.id %>">
          <%= upvote.stock_id %>
        </a>

        <a href="/delete_upvote_from_stock/<%= upvote.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="stock_upvotes_new_form">
        <%= render partial: "stock_templates/stock_upvotes_new_form" %>
      </div>
    </div>

  </ul>
</div>
