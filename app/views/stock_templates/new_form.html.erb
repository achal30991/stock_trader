<h1>
  Add a new stock
</h1>


<hr>

<form action="/create_stock" method="post">

  <div class="form-group">
    <label for="portfolio_id">
      Portfolio
    </label>

    <%= select_tag(:portfolio_id, options_from_collection_for_select(Portfolio.all, :id, :created_at, @stock.portfolio_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="stock_tickr">
      Stock tickr
    </label>

    <input type="text" id="stock_tickr" name="stock_tickr" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create stock
  </button>
</form>

<hr>

<a href="/stocks">
  Go back
</a>
