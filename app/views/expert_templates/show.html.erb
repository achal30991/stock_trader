<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Expert #<%= @expert.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/experts" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/experts/<%= @expert.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit expert
        </a>
      </div>

    </div>

    <dl>
      <dt>
        Email
      </dt>
      <dd>
        <%= @expert.email %>
      </dd>

      <dt>
        Password
      </dt>
      <dd>
        <%= @expert.password %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@expert.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@expert.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "expert_templates/expert_comments" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "expert_templates/expert_upvotes" %>
  </div>
</div>
