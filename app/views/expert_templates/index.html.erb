<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All experts
    </h1>

    <a href="/experts/new" class="btn btn-block btn-outline-secondary">
      Add a new expert
    </a>
  </div>
</div>

<!-- Ransack Code start -->

