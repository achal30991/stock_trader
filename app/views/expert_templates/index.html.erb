<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All experts
    </h1>

    <a href="/experts/new" class="btn btn-block btn-outline-secondary">
      Add a new expert
    </a>
  </div>
</div>





<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @experts.each do |expert| %>
      <tr>
        <td>
          <%= expert.id %>
        </td>

        <td>
          <%= expert.email %>
        </td>

        <td>
          <%= expert.password %>
        </td>

        <td>
          <%= time_ago_in_words(expert.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(expert.updated_at) %> ago
        </td>

        <td>
          <a href="/experts/<%= expert.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @experts, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
