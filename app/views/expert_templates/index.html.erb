<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @experts.each do |expert| %>
      <tr>
        <!-- Display expert.id start -->
        <td>
          <%= expert.id %>
        </td>
        <!-- Display expert.id end -->

        <!-- Display expert.email start -->
        <td>
          <%= expert.email %>
        </td>
        <!-- Display expert.email end -->

        <!-- Display expert.password start -->
        <td>
          <%= expert.password %>
        </td>
        <!-- Display expert.password end -->

        <!-- Display expert.created_at start -->
        <td>
          <%= time_ago_in_words(expert.created_at) %> ago
        </td>
        <!-- Display expert.created_at end -->

        <!-- Display expert.updated_at start -->
        <td>
          <%= time_ago_in_words(expert.updated_at) %> ago
        </td>
        <!-- Display expert.updated_at end -->

        <td>
          <a href="/experts/<%= expert.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
